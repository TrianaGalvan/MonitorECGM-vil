<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/logo180"
                android:minWidth="180dp"
                android:minHeight="180dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtCorreo"
                android:hint="Correo electrónico"
                android:textColor="@color/iconsText"
                android:textColorHint="@color/hint"
                android:textSize="21dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="4dp"
                android:layout_marginTop="8dp"
                android:textIsSelectable="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrar"
                android:layout_marginTop="11px"
                android:id="@+id/button"
                android:background="@color/colorAccent"
                android:textColor="@color/iconsText"
                android:onClick="onClickEntrarAplicacion"
                android:layout_below="@+id/txtContraseña"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitor ECG"
                android:id="@+id/textView"
                android:autoText="true"
                android:textSize="40dp"
                android:fontFamily="sans-serif-black"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contrasena"
                android:id="@+id/txtContraseña"
                android:inputType="textPassword"
                android:textColor="@color/iconsText"
                android:textColorHint="@color/hint"
                android:textSize="21dp"
                android:layout_below="@+id/txtCorreo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="4dp"
                android:layout_marginTop="1dp"
                android:clickable="true"
                android:onClick="onClickRecuperarContrasena"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="@color/iconsText"
                android:id="@+id/textView5"
                android:textSize="17dp"
                android:clickable="true"
                android:onClick="onClickRecuperarcontrasena"
                android:textStyle="italic"
                android:layout_below="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp"
                android:layout_toLeftOf="@+id/txtRecuperarContrasena"
                android:layout_toStartOf="@+id/txtRecuperarContrasena" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:textColor="@color/iconsText"
                android:id="@+id/txtRecuperarContrasena"
                android:textSize="17sp"
                android:clickable="true"
                android:onClick="onClickRegistrarse"
                android:textStyle="italic"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
